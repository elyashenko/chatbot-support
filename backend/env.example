# Database
DATABASE_URL=postgresql://user:password@localhost:5432/chatbot_support

# Vector Database
CHROMA_PERSIST_DIRECTORY=./data/chroma_db

# AI Models Configuration
GIGACHAT_API_KEY=your_gigachat_api_key
GIGACHAT_BASE_URL=https://gigachat.devices.sberbank.ru/api/v1
GIGACHAT_VERIFY_SSL_CERT=false

DEEPSEEK_API_KEY=your_deepseek_api_key
DEEPSEEK_BASE_URL=https://api.deepseek.com

OPENAI_API_KEY=your_openai_api_key
OPENAI_BASE_URL=https://api.openai.com/v1

# Model Settings
DEFAULT_MODEL=gigachat
FALLBACK_MODELS=deepseek,openai
MAX_TOKENS=4096
TEMPERATURE=0.7

# Confluence Integration
CONFLUENCE_URL=https://your-company.atlassian.net
CONFLUENCE_USERNAME=your_email@company.com
CONFLUENCE_API_TOKEN=your_confluence_token
CONFLUENCE_SPACE_KEYS=DEV,TECH,SUPPORT

# Security
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/chatbot.log

# Server
HOST=0.0.0.0
PORT=8000
DEBUG=false

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000
